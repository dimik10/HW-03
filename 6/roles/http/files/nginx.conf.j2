server {
        listen {{ http_port }};
        root {{ dir }};
        index index.php info.php index.htm index.nginx-debian.html;
        server_name {{ http_host }};

        location / {
                try_files $uri $uri/ =404;
        }

        location ~ \.php$ {
                include snippets/fastcgi-php.conf;
                fastcgi_pass {{hostvars[inventory_hostname].ansible_host}}:9000;
        }

        location ~ /\.ht {
                deny all;
        }
}